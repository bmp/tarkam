---
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/globals.css";
---

<MainLayout
  title="Contact Us | Tarkam"
  description="Get in touch with the Centre for Data-Driven Discourse"
>
  <!-- Top hero-style block (like first section on index) -->
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl font-bold mb-4">Contact Us</h1>
      <p class="text-xl text-gray-600">
        Get in touch with our team
      </p>
    </div>
  </section>

  <!-- Main content block (like About/Team/History/Colophon) -->
  <section class="pb-12 px-4">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-2xl font-bold mb-6">Contact Information</h2>
      <div class="space-y-6">
        <div>
          <h3 class="font-semibold text-lg mb-2">Email</h3>
          <a
            href="mailto:info@tarkam.org"
            class="text-purple-900 hover:underline"
          >
            info@tarkam.org
          </a>
        </div>
        <div>
          <h3 class="font-semibold text-lg mb-2">Location</h3>
          <p>
            Tarkam: Centre for Data-Driven Discourse<br />
            International Institute of Information Technology, Bangalore<br />
            India
          </p>
        </div>
        <div>
          <h3 class="font-semibold text-lg mb-2">Office Hours</h3>
          <p>
            Monday - Friday<br />
            9:00 AM - 5:00 PM IST
          </p>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
