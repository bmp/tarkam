---
import MainLayout from "../layouts/MainLayout.astro";
import Form from "../components/ui/Form.astro";
---

<MainLayout title="Contact Us | Tarkam" description="Get in touch with the Centre for Data-Driven Discourse">
  <main class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="py-20 px-4 bg-gradient-to-r from-purple-900 to-purple-800">
      <div class="max-w-4xl mx-auto text-center text-white">
        <h1 class="text-5xl font-bold mb-4">Contact Us</h1>
        <p class="text-xl text-gray-200">
          Get in touch with our team
        </p>
      </div>
    </section>

    <!-- Content Section -->
    <section class="py-16 px-4">
      <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-bold mb-6">Contact Information</h2>
          <div class="space-y-6">
            <div>
              <h3 class="font-semibold text-lg mb-2">Email</h3>
              <a href="mailto:info@tarkam.org" class="text-purple-900 hover:underline">
                info@tarkam.org
              </a>
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-2">Phone</h3>
              <p>Contact details coming soon</p>
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-2">Location</h3>
              <p>Tarkam<br/>India</p>
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-2">Office Hours</h3>
              <p>Monday - Friday<br/>9:00 AM - 5:00 PM IST</p>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold mb-6">Send us a Message</h2>
          <Form />
        </div>
      </div>
    </section>
  </main>
</MainLayout>
