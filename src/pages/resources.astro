---
import { Image } from "astro:assets";
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/globals.css";
import ResourcesIMG from "../assets/pics/Zenodo_Tarkam.png"
import Section from "../components/sections/Section.astro";
---

<MainLayout title="Resources | Tarkam" description="Tools, guides, and information for data-driven work">
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="py-20 px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold mb-4">Resources</h1>
        <p class="text-xl text-gray-600">
          Tools and information to support your work with data
        </p>
      </div>
    </section>

<Section id="home">
  <div
    class="grid grid-cols-1 grid-template md:grid-cols-2 md:grid-rows-1 mt-[10px]"
  >
    <div class="flex flex-col w-full lg:w-[100%]">
    </div>
        <picture class="row-span-1 md:row-span-3 max-w-md">
        <a href="https://zenodo.org/communities/tarkam/about"
        class="link-subtle"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Zenodo Tarkam community page (opens in new tab)"><Image src={ResourcesIMG} alt="Zenodo Screenshot" width={672} height={589} format="webp" loading="eager" decoding="async" fetchpriority="high" class="w-full h-auto object-cover" /></a>
        </picture>
        <div class="w-full lg:w-[66.5%]">
        <p class="my-[35px]">
        Tarkam's resources will be available through the <a href="https://zenodo.org/communities/tarkam/about"
        class="link-subtle"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Zenodo Tarkam community page (opens in new tab)">
        Zenodo
        </a> platform.
        </p>
    </div>
  </div>
</Section>
<style>
  .grid-template {
    grid-template-rows: auto 1fr;
  }
</style>

  </main>
</MainLayout>
