---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/card-pic1.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/card-pic3.png";
import c4 from "../../assets/pics/card-pic4.png";

const cards = [
  {
    index: 1,
    titleTop: "The Library",
    titleBottom: "Stories and data for everyone in a federated manner",
    img: c1,
    alt: "Library",
    link: "https://google.com",
  },
  {
    index: 2,
    titleTop: "Data Cafe",
    titleBottom: "Spark imagination, create standards and protocols",
    img: c2,
    alt: "Cafe",
    link: "https://google.com",
  },
  {
    index: 2,
    titleTop: "Forum",
    titleBottom: "A data clinic to understand the data needs",
    img: c3,
    alt: "Forum",
    link: "https://google.com",
  },
  {
    index: 1,
    titleTop: "Data Stewards",
    titleBottom: "Cadre of data specialists for everyone",
    img: c4,
    alt: "Data Stewards",
    link: "https://google.com",
  },
];

const description =
  "Tarkam will both create the digital infrastructure and offine, community-focused spaces to improve data-driven discourse in civil society.";
---

<Section id="services">
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="Work" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-2 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
          />
        ))
      }
    </div>
  </div>
</Section>
